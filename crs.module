/**
 * List of supported currencies
 */
function crs_currencies() {
  return array('EUR', 'USD');
}

/**
 * hook_perm()
 */
function crs_perm() {
  return array('crs change currency');
}

/**
 * hook_menu()
 */
function crs_menu() {
  $items['admin/store/currency'] = array(
    'type' => MENU_NORMAL_ITEM,
    'title' => 'Exchange rates',
